<div class="wrapper">
    <div class="database_wrapper">

        <h1> <%= post.post %> </h1>
        <% if (locals.message) { %>
              <h2><%= message.commenterror %></h2>
          <% } %>

        <% post.comments.forEach(comment => { %>
        <p class="database_comment"> <%= comment.comment %> </p>
        <% }); %>

    </div>
    <%- include('_comment_form_fields') %>
</div>